{
  "name": "nitier/framework",
  "description": "A PHP framework for building web applications.",
  "type": "library",
  "require": {
    "php": "^8.4",
    "php-di/php-di": "^7.1",
    "psr/http-message": "^2.0",
    "psr/http-server-handler": "^1.0",
    "psr/http-server-middleware": "^1.0",
    "symfony/console": "^7.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.1.2",
    "phpstan/phpstan": "^2.1.12",
    "squizlabs/php_codesniffer": "^3.12.0",
    "league/commonmark": "^2.7"
  },
  "autoload": {
    "psr-4": {
      "Framework\\": "src/",
      "Psr\\": "src/Psr/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "test/",
      "App\\": "examples/test-app/src/"
    }
  },
  "scripts": {
    "test": "phpunit  --configuration phpunit.xml",
    "cs": "phpcs --standard=.phpcs.xml src",
    "cs-fix": "phpcbf --standard=.phpcs.xml src",
    "stan": "phpstan analyse",
    "console": "php examples/test-app/bin/console.php"
  }
}
