{
  "name": "nitier/framework",
  "description": "A PHP framework for building web applications.",
  "type": "library",
  "require": {
    "php": "^8.4",
    "php-di/php-di": "^7.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.1.2",
    "phpstan/phpstan": "^2.1.12",
    "squizlabs/php_codesniffer": "^3.12.0"
  },
  "autoload": {
    "psr-4": {
      "Framework\\": "src/",
      "App\\": "test-app/src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "test/"
    }
  },
  "scripts": {
    "test": "phpunit  --configuration phpunit.xml",
    "cs": "phpcs --standard=.phpcs.xml src",
    "cs-fix": "phpcbf --standard=.phpcs.xml src",
    "stan": "phpstan analyse"
  }
}
